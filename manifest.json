{
  "manifest_version": 3,
  "name": "Image Collector",
  "version": "1.0",
  "description": "Collect all images from any webpage.",
  "permissions": [
    "scripting",
    "activeTab",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
